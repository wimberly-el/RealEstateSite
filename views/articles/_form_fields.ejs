
<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" name="title" value="<%= article.title %>" id="title" class="form-control">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" name="description"  id="description" class="form-control"><%= article.description %></textarea></div>


<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown"  id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/articles/allBlogs" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>