    <% articles.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
           <h4 class="card-title"><%= article.title %></h4>
           <div class="card-subtitle text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></div>
            <div class="card-text mb-2"><%= article.description %></div>
            <a href="/blog/<%= article.slug %>" class="btn btn-primary">Read More</a>
                <%  if(cookieName) {  %>
            <a href="/blog/edit/<%= article.id %>" class="btn btn-info">Edit</a>
            <form action="/blog/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-danger " >Delete</button>
            </form>
